{
  "name": "fuel-price-app",
  "version": "0.0.1",
  "description": "",
  "author": "musta@z1.digital",
  "private": true,
  "scripts": {
    "dev": "yarn && yarn prisma generate && tsnd --respawn --files -r @babel/register --inspect -- src/index.ts",
    "build": "babel ./src -d ./dist --extensions .ts --copy-files",
    "typecheck": "tsc",
    "start": "node dist/index.js",
    "lint:base": "eslint --ext .js,.json,.ts,.graphql",
    "lint": "yarn lint:base src",
    "gql": "graphql-codegen --config codegen.yml",
    "prisma": "prisma",
    "test": "jest",
    "test:debug": "node --inspect ./node_modules/.bin/jest --watch --runInBand --testTimeout 999999",
    "heroku-postbuild": "yarn prisma migrate up --experimental && yarn prisma generate && yarn build",
    "makemigrations": "yarn prisma migrate dev --preview-feature",
    "migrate": "yarn prisma migrate deploy --preview-feature"
  },
  "lint-staged": {
    "src/**/*.{js,json,ts,graphql}": [
      "yarn lint:base --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn typecheck && lint-staged"
    }
  },
  "engines": {
    "node": "14.15.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.10.5",
    "@nestjs/common": "^7.3.2",
