    "fastify": "^2.15.0",
    "fastify-cookie": "^3.6.1",
    "fastify-session": "^3.3.0",
    "graphql": "^15.3.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-scalar": "^0.0.11",
    "graphql-tools": "^6.0.15",
    "graphql-type-json": "^0.3.2",
    "jsonwebtoken": "^8.5.1",
